<ui:FluentWindow x:Class="SnippetMasterWPF.Views.Windows.ClipboardHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Clipboard History" Height="500" Width="350"
        Topmost="True" ShowInTaskbar="False"
        ResizeMode="CanResize">
    
    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </ui:FluentWindow.Resources>
    
    <Grid Background="{ui:ThemeResource ApplicationBackgroundBrush}">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0">
                <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Clipboard History" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="8,4,8,8" VerticalAlignment="Center"/>
                    
                    <ui:Button Grid.Column="1" Content="âœ•" 
                               Width="30" Height="30" 
                               Click="CloseButton_Click"
                               Appearance="Secondary"/>
                </Grid>
                
                <ui:TextBox Margin="8,0,8,8" 
                            PlaceholderText="Search clipboard..."
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ClipboardEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:Card Margin="4,2" Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="{Binding Content}" 
                                               TextWrapping="Wrap" MaxHeight="60" 
                                               TextTrimming="CharacterEllipsis" Cursor="Hand">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding DataContext.CopyToClipboardCommand, 
                                                                   RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding CreatedAt, StringFormat='{}{0:HH:mm:ss}'}" 
                                               FontSize="10" Opacity="0.7" 
                                               HorizontalAlignment="Left" Margin="0,4,0,0"/>
                                    
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                        <TextBlock Text="ðŸ“Œ" Visibility="{Binding IsPinned, Converter={StaticResource BoolToVisConverter}}" 
                                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <ui:Button Command="{Binding DataContext.TogglePinCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding}"
                                                   Appearance="Secondary">
                                            <ui:Button.Content>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Pin"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                                                    <Setter Property="Text" Value="Unpin"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </ui:Button.Content>
                                        </ui:Button>
                                    </StackPanel>
                                </Grid>
                            </ui:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</ui:FluentWindow>