<Page
    x:Class="SnippetMasterWPF.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnippetMasterWPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:ww2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:converters="clr-namespace:SnippetMasterWPF.Infrastructure.Converters"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBooleanConverter x:Key="BoolToInverseBoolConverter" />
    </Page.Resources>

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <ComboBox
            Grid.Row="0"
            Width="150"
            Margin="5"
            HorizontalAlignment="Left"
            IsEditable="True"
            IsTextSearchEnabled="True"
            ItemsSource="{Binding ViewModel.Languages}"
            SelectedItem="{Binding ViewModel.SelectedLanguage}"
            DisplayMemberPath="Name" />

        <Border
            Grid.Row="1"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="4"
            MinHeight="150">
            <Grid>
                <ww2:WebView2
                    x:Name="WebView"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsEnabled="{Binding ViewModel.IsProcessing, Converter={StaticResource BoolToInverseBoolConverter}}" />
                
                <!-- Loading Overlay -->
                <Border
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    Opacity="0.9"
                    CornerRadius="4"
                    Visibility="{Binding ViewModel.IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <ui:ProgressRing
                            Width="40"
                            Height="40"
                            Margin="0,0,0,10"
                            IsIndeterminate="True" />
                        <TextBlock
                            Text="Formatting text..."
                            FontSize="14"
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- <ui:TextBox -->
        <!--     AcceptsReturn="True" -->
        <!--     AcceptsTab="True" -->
        <!--     IsUndoEnabled="True" -->
        <!--     Text="{Binding ViewModel.SnippetText, UpdateSourceTrigger=PropertyChanged}" /> -->

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Command="{Binding ViewModel.SnipImageCommand}"
                Content="Snip (Alt+Q)" />
            <Button
                Margin="5"
                Command="{Binding ViewModel.UploadFileCommand}"
                Content="Upload" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Command="{Binding ViewModel.CopySnippetCommand}"
                Content="Copy Text" />
            <Button
                Margin="5"
                Command="{Binding ViewModel.GenerateScreenshotCommand}"
                Content="Generate Screenshot" />
        </StackPanel>

        <ui:CardExpander
            Grid.Row="4"
            Header="Generated Screenshots"
            Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="180">
                <ItemsControl ItemsSource="{Binding ViewModel.ScreenshotHistory}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ui:CardControl Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Margin="0,0,200,0" Width="60" Height="40">
                                        <Image Source="{Binding Thumbnail}" Stretch="None" />
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,50,0">
                                        <TextBlock Text="{Binding FileName}" FontWeight="Medium" TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding CreatedDate, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    
                                    <ui:Button Grid.Column="2" Content="Open" Margin="0,0,1000,0" Command="{Binding DataContext.ViewModel.OpenFileCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding FilePath}" Appearance="Secondary" />
                                </Grid>
                            </ui:CardControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </ui:CardExpander>
    </Grid>
</Page>
