<Page
    x:Class="SnippetMasterWPF.Views.Pages.QuickTextActionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnippetMasterWPF.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="QuickTextActionsPage"
    d:DataContext="{d:DesignInstance local:QuickTextActionsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    
            <StackPanel CanVerticallyScroll="True">
                <!-- Text Input Area -->
                <ui:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Text Content" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12"/>
                        <ui:TextBox 
                            Text="{Binding ViewModel.TextContent, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Enter or paste text here..."
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Disabled"
                            Height="200"
                            PreviewMouseWheel="TextBox_PreviewMouseWheel"/>
                    </StackPanel>
                </ui:Card>

                <!-- Quick Actions -->
                <ui:Card Padding="16">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,16"/>
                        
                        <!-- Text Generators -->
                        <Expander Header="Text Generators" IsExpanded="True" Margin="0,0,0,16">
                            <StackPanel Margin="0,8,0,0">
                                <WrapPanel Orientation="Horizontal">
                                    <ui:Button Content="Lorem Ipsum" Command="{Binding ViewModel.ShowLoremIpsumDialogCommand}" Margin="4"/>
                                    <ui:Button Content="Password Generator" Command="{Binding ViewModel.ShowPasswordDialogCommand}" Margin="4"/>
                                    <ui:Button Content="Random UUID" Command="{Binding ViewModel.GenerateUuidCommand}" Margin="4"/>
                                </WrapPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Text Transformations -->
                        <Expander Header="Text Transformations" Margin="0,0,0,16">
                            <StackPanel Margin="0,8,0,0">
                                <WrapPanel Orientation="Horizontal">
                                    <ui:Button Content="UPPERCASE" Command="{Binding ViewModel.ToUpperCaseCommand}" Margin="4"/>
                                    <ui:Button Content="lowercase" Command="{Binding ViewModel.ToLowerCaseCommand}" Margin="4"/>
                                    <ui:Button Content="Title Case" Command="{Binding ViewModel.ToTitleCaseCommand}" Margin="4"/>
                                    <ui:Button Content="Reverse Text" Command="{Binding ViewModel.ReverseTextCommand}" Margin="4"/>
                                </WrapPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Text Utilities -->
                        <Expander Header="Text Utilities">
                            <StackPanel Margin="0,8,0,0">
                                <WrapPanel Orientation="Horizontal">
                                    <ui:Button Content="Remove Extra Spaces" Command="{Binding ViewModel.RemoveExtraSpacesCommand}" Margin="4"/>
                                    <ui:Button Content="Sort Lines" Command="{Binding ViewModel.SortLinesCommand}" Margin="4"/>
                                    <ui:Button Content="Remove Duplicates" Command="{Binding ViewModel.RemoveDuplicatesCommand}" Margin="4"/>
                                    <ui:Button Content="Count Words" Command="{Binding ViewModel.CountWordsCommand}" Margin="4"/>
                                </WrapPanel>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
</Page>