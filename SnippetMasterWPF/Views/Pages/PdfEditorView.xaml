<Page
    x:Class="SnippetMasterWPF.Views.Pages.PdfEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:SnippetMasterWPF.ViewModels.Pages"
    xmlns:services="clr-namespace:SnippetMasterWPF.Services"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="PdfEditorView"
    d:DataContext="{d:DesignInstance Type=vm:PdfEditorViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Focusable="True"
    KeyDown="PdfEditorView_KeyDown"
    TextInput="PdfEditorView_TextInput"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Chrome: Modern WPF UI Toolbar -->
        <ToolBar Grid.Row="0">
            <ui:Button Appearance="Primary" 
                       Icon="{ui:SymbolIcon Open24}" 
                       Content="Open PDF" 
                       Click="OpenPdfButton_Click"/>
            <ui:Button Icon="{ui:SymbolIcon Save24}" 
                       Content="Save" 
                       Click="SaveButton_Click"/>
        </ToolBar>

        <!-- High-Performance Document Area -->
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">
            <ItemsControl x:Name="PageItemsControl" ItemsSource="{Binding DocumentPages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel HorizontalAlignment="Center" Margin="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                BorderThickness="1" 
                                Margin="10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>

                            
                            <Canvas Width="{Binding Width}" 
                                    Height="{Binding Height}" 
                                    Background="White"
                                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                                    SnapsToDevicePixels="True"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Diagnostics Log Overlay -->
        <Expander VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
                  MaxHeight="200" Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}"
                  Header="Diagnostics Log" Grid.Row="1">
            <ListView ItemsSource="{Binding Source={x:Static services:LogService.Instance}, Path=Messages}" 
                      FontFamily="Consolas" FontSize="10"/>
        </Expander>
    </Grid>
</Page>