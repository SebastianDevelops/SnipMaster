<Window
    x:Class="SnipmasterDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnipmasterDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnSnip"
            Width="100"
            Height="30"
            Background="Black"
            Click="btnSnip_Click"
            Content="Snip!" />
        <Image
            x:Name="imgSnipped"
            Width="400"
            Height="300"
            Margin="10,50,10,10" />
    </Grid>
</Window>
